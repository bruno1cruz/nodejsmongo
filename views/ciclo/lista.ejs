<% include ../header %>

<%
function formatarData(_data){
	return _data.getDate() + "/" + (_data.getMonth()+1) + "/" + _data.getFullYear();
}
%>

<section class="content">
	<div class="row">

		<div class="col-md-12">
			<article class="widget">
				<header class="widget__header">
					<h3 class="widget__title">Ciclos</h3>
					<div class="widget__config">
						<a href="/ciclo">Novo Ciclo</a>
					</div>
				</header>
				
				<div class="widget__content">
					
					<table class="table">
						<tbody>
							<% for(var i=0; i<ciclos.length; i++) {%>
								<tr>
									<td><%= ciclos[i].nome %></td>
									<td><%=formatarData(ciclos[i].inicio)%></td>
									<td><%=formatarData(ciclos[i].fim)%></td>
									<td>
										<a href="/ciclo/<%=ciclos[i].url%>/campanhas">
											Ver Campanhas
										</a>
									</td>
								</tr>
							<% } %>
						</tbody>
						<thead>
							<tr>
								<th>Nome</th>
								<th>In√≠cio</th>
								<th>Fim</th>
								<th>&nbsp;</th>
							</tr>
						</thead>
					</table>
				</div>
			</article>
		</div>
	</div>
</section>

<% include ../footer %>